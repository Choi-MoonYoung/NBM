<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/text_storename"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_desingername"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/text_storename"
        android:layout_marginTop="8dp"/>


    <ImageView
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:id="@+id/image_user"
        android:src="@drawable/icon_person"
        android:layout_below="@+id/text_desingername"
        android:layout_marginTop="15dp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="이름"
        android:id="@+id/text_username"
        android:layout_toRightOf="@+id/image_user"
        android:layout_toEndOf="@+id/image_user"
        android:layout_below="@+id/text_desingername"
        android:layout_marginTop="25dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_toRightOf="@+id/image_user"
        android:layout_marginLeft="189dp"
        android:layout_below="@+id/text_desingername"
        android:layout_marginTop="25dp"
        android:id="@+id/text_date" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="39dp"
        android:text="B"
        android:id="@+id/btn_option"
        android:layout_marginTop="77dp"
        android:layout_toRightOf="@+id/text_date"
        android:layout_marginLeft="5dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_post"
        android:layout_below="@+id/image_user"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="23dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_tags"
        android:layout_below="@+id/text_post"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="18dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/text_tags"
        android:layout_marginTop="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/btn_like"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_likecount"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/btn_like"
        android:layout_toEndOf="@+id/btn_like"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignBaseline="@+id/btn_like"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btn_comment"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/text_likecount"
        android:layout_toEndOf="@+id/text_likecount"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_commentcount"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/btn_comment"
        android:layout_toEndOf="@+id/btn_comment"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignBaseline="@+id/btn_like"/>



</RelativeLayout>