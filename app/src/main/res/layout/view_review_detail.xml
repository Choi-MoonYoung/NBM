<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_user"
        android:src="@drawable/icon_person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/text_username"
        android:layout_below="@+id/text_date"
        android:layout_toRightOf="@+id/image_user"
        android:layout_toEndOf="@+id/image_user" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/btn_option"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_toLeftOf="@id/btn_option"
        android:layout_alignBaseline="@id/btn_option"
        android:id="@+id/text_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_post"
        android:layout_below="@+id/text_username"
        android:layout_toRightOf="@+id/image_user"
        android:layout_toEndOf="@+id/image_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_tags"
        android:layout_alignBottom="@+id/image_user"
        android:layout_toRightOf="@+id/image_user"
        android:layout_toEndOf="@+id/image_user" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/image_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/btn_like"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_likecount"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/btn_like"
        android:layout_toEndOf="@+id/btn_like"
        android:layout_alignBaseline="@+id/btn_like"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btn_comment"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/text_likecount"
        android:layout_toEndOf="@+id/text_likecount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_commentcount"
        android:layout_alignTop="@+id/text_likecount"
        android:layout_toRightOf="@+id/btn_comment"
        android:layout_toEndOf="@+id/btn_comment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_storename"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_desingername"
        android:layout_alignTop="@+id/text_storename"
        android:layout_toLeftOf="@+id/text_storename"
        android:layout_toStartOf="@+id/text_storename" />
</RelativeLayout>